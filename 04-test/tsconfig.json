{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "lib": [
      "ES2020", "DOM"
    ],
    "module": "ES2022",
    // "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}