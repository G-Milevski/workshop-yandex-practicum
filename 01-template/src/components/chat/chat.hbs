<a class="chat {{#if active}}chat--active{{/if}}">
  <div class="chat__avatar">
    <img src={{avatar}} alt={{title}} />
  </div>
  <div class="chat__top">
    <div class="flex__between">
        <span class="chat__title">{{title}}</span>
        <span class="chat__date">{{date}}</span>
    </div>
  </div>
  <div class="chat__desc">
    <span>{{desc}}</span>  
  </div>
</a>